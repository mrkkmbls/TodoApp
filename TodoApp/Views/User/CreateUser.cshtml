}

<h1> Create User</h1>

<!-- Model oninvalid errors to be displayed -->



<form method="post" asp-action="CreateUser" asp-controller="User">
    <!-- need of form element in HTML 5-->
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label asp-for="uName"></label>
        <input asp-for="uName" />
        <span asp-validation-for="uName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="uEmail"></label>
        <input asp-for="uEmail" />
    </div>
    <div>
        <label asp-for="uPassword"></label>
        <input asp-for="uPassword" />
    </div>
    <div>
        <label asp-for="uStatus"></label>
        <input asp-for="uStatus" />
    </div>

    <button type="submit">Send</button>
</form>
