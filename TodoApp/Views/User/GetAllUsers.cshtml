@model List<User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Get All Users</h1>

<a asp-action="CreateUser" asp-controller="User">Add User</a>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.uId</th>
                <td>@user.uName</td>
                <td>@user.uEmail</td>
                <td>@user.uPassword</td>
                <td>@user.uStatus</td>
                <td><a asp-controller="User" asp-action="DetailUser" asp-route-userId="@user.uId">View</a></td>
                <td><a asp-controller="User" asp-action="UpdateUser" asp-route-userId="@user.uId">Edit</a></td>
                <td><a asp-controller="User" asp-action="DeleteUser" asp-route-userId="@user.uId">Delete</a></td>
            </tr>
        }
   </tbody>
</table>